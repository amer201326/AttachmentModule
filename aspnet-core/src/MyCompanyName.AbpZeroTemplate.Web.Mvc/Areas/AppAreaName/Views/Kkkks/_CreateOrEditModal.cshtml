
@using System.Globalization
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Common.Modals
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Kkkks
@model CreateOrEditKkkkModalViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditKkkk")) : L("CreateNewKkkk")))

<div class="modal-body">
        <div id="KkkkInformationsTab">
            <form name="KkkkInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.Kkkk.Id" />
                }

				            
						<div class="form-group">
							<label for="personId">@L("Person")</label>
							@Html.DropDownList("personId", new SelectList(Model.KkkkPersonList,"Id","DisplayName", (Model.IsEditMode ? Model.Kkkk.PersonId.ToString() : "")),@L("SelectAPerson"), new { @class = "form-control"   })
						</div>


				
								<div class="form-group">
									<label for="Kkkk_name">@L("name")</label>
									<input class="form-control" id="Kkkk_name" value="@Model.Kkkk.name" type="text" name="name"     />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
