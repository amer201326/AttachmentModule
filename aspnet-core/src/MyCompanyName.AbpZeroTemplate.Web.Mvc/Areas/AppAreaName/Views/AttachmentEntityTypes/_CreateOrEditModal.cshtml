
@using System.Globalization
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Common.Modals
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.AttachmentEntityTypes
@model CreateOrEditAttachmentEntityTypeModalViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditAttachmentEntityType")) : L("CreateNewAttachmentEntityType")))

<div class="modal-body">
        <div id="AttachmentEntityTypeInformationsTab">
            <form name="AttachmentEntityTypeInformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.AttachmentEntityType.Id" />
                }

				            
								<div class="form-group m-form__group">
										<label for="AttachmentEntityTypeArName">@L("AttachmentEntityType")</label>
									    <div class="input-group">
											<input class="form-control" id="AttachmentEntityTypeArName" name="attachmentEntityTypeArName" value="@Model.AttachmentEntityTypeArName" type="text" disabled>
										<div class="input-group-append">
											<button class="btn btn-primary blue" id="OpenAttachmentEntityTypeLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
										</div> 
										<div class="input-group-prepend">
											<button class="btn btn-danger btn-icon" type="button" id="ClearAttachmentEntityTypeArNameButton"><i class="fa fa-times"></i></button>
										</div>
									</div>
								</div>

								@if (Model.IsEditMode)
								{
									<input class="form-control" id="AttachmentEntityType_ParentTypeId" value="@Model.AttachmentEntityType.ParentTypeId" type="text" name="parentTypeId"  hidden/>
								}
								 else
								{ 
									<input class="form-control" id="AttachmentEntityType_ParentTypeId" value="" type="text" name="parentTypeId"  hidden/>
								}



				
								<div class="form-group">
									<label for="AttachmentEntityType_ArName">@L("ArName")</label>
									<input class="form-control" id="AttachmentEntityType_ArName" value="@Model.AttachmentEntityType.ArName" type="text" name="arName"  required    />
								</div>
					
								<div class="form-group">
									<label for="AttachmentEntityType_EnName">@L("EnName")</label>
									<input class="form-control" id="AttachmentEntityType_EnName" value="@Model.AttachmentEntityType.EnName" type="text" name="enName"  required    />
								</div>
					
								<div class="form-group">
									<label for="AttachmentEntityType_Folder">@L("Folder")</label>
									<input class="form-control" id="AttachmentEntityType_Folder" value="@Model.AttachmentEntityType.Folder" type="text" name="folder"  required    />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
